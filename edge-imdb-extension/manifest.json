{
  "manifest_version": 3,
  "name": "Vidsrc ++",
  "version": "0.1.0",
  "description": "A browser extension to help use the vidsrc website.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "vidsrc16.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "vidsrc16.png"
  }
}